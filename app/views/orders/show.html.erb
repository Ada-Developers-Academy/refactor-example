<h1>Order #<%= @order.id %></h1>

<table class='table'>
  <% @order.order_items.each do |item| %>
    <tr>
      <td><strong><%= item.product.name %></strong></td>
      <td><%= number_to_currency (item.product.price / 100) %></td>
      <td>x</td>
      <td><%= item.quantity %> </td>
      <td>=</td>
      <td><%= number_to_currency (item.total / 100) %></td>
    </tr>
  <% end %>
</table>

<h3>Total: <%= number_to_currency (@order.total / 100) %></h3>
